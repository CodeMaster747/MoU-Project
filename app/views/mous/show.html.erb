<div class="d-flex flex-wrap align-items-center justify-content-between mb-3 gap-2">
  <div>
    <h1 class="h3 mb-1"><%= @mou.title %></h1>
    <div class="text-muted"><%= @mou.organization_one %> / <%= @mou.organization_two %></div>
  </div>
  <div class="d-flex gap-2">
    <%= link_to "Edit", edit_mou_path(@mou), class: "btn btn-outline-secondary" %>
    <%= button_to "Delete", mou_path(@mou), method: :delete, class: "btn btn-outline-danger", form: { data: { turbo_confirm: "Delete this MoU (and all outcomes/feedback)?" } } %>
  </div>
</div>

<div class="row g-3">
  <div class="col-lg-7">
    <div class="card">
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <div class="fw-semibold">MoU Details</div>
          <div><%= mou_status_badge(@mou) %></div>
        </div>

        <dl class="row mb-0">
          <dt class="col-sm-4">Department</dt>
          <dd class="col-sm-8"><%= @mou.department %></dd>

          <dt class="col-sm-4">Start Date</dt>
          <dd class="col-sm-8"><%= @mou.start_date %></dd>

          <dt class="col-sm-4">End Date</dt>
          <dd class="col-sm-8"><%= @mou.end_date %></dd>

          <dt class="col-sm-4">Objective</dt>
          <dd class="col-sm-8"><%= simple_format(@mou.objective) %></dd>

          <dt class="col-sm-4">Terms</dt>
          <dd class="col-sm-8"><%= simple_format(@mou.terms) %></dd>

          <dt class="col-sm-4">Contact Details</dt>
          <dd class="col-sm-8"><%= simple_format(@mou.contact_details) %></dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="col-lg-5">
    <div class="card">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div class="fw-semibold">Outcomes</div>
        <%= link_to "Add Outcome", new_mou_outcome_path(@mou), class: "btn btn-sm btn-primary" %>
      </div>
      <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th>Title</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @outcomes.any? %>
              <% @outcomes.each do |outcome| %>
                <tr>
                  <td>
                    <div class="fw-semibold"><%= link_to outcome.title, mou_outcome_path(@mou, outcome), class: "text-decoration-none" %></div>
                    <div class="text-muted small">Target: <%= outcome.target_date %></div>
                  </td>
                  <td><%= outcome_status_badge(outcome) %></td>
                  <td class="text-end text-nowrap">
                    <div class="d-inline-flex flex-nowrap gap-1">
                      <%= link_to "View", mou_outcome_path(@mou, outcome), class: "btn btn-sm btn-outline-primary" %>
                      <%= link_to "Edit", edit_mou_outcome_path(@mou, outcome), class: "btn btn-sm btn-outline-secondary" %>
                      <%= button_to "Delete", mou_outcome_path(@mou, outcome), method: :delete, class: "btn btn-sm btn-outline-danger", form: { class: "d-inline", data: { turbo_confirm: "Delete this outcome?" } } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3" class="text-muted text-center py-4">No outcomes yet.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Back to MoUs", mous_path, class: "btn btn-outline-secondary" %>
</div>
