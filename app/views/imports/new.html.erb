<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h3 mb-0">Import Excel Dataset</h1>
</div>

<div class="row g-3">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <div class="fw-semibold mb-2">Upload .xlsx file</div>
        <%= form_with url: imports_path, method: :post, multipart: true do |f| %>
          <div class="mb-3">
            <%= f.label :file, "Excel file (.xlsx)", class: "form-label" %>
            <%= f.file_field :file, class: "form-control", accept: ".xlsx" %>
            <div class="form-text">If you donâ€™t upload a file, the system imports the default dataset from the data folder.</div>
          </div>
          <%= f.submit "Import", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <div class="fw-semibold mb-2">Default dataset</div>
        <div class="text-muted mb-3"><%= @default_dataset_path %></div>
        <%= form_with url: imports_path, method: :post do |f| %>
          <%= f.submit "Import Default Dataset", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
