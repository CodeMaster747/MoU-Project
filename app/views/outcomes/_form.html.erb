<%= form_with model: [mou, outcome] do |f| %>
  <% if outcome.errors.any? %>
    <div class="alert alert-danger">
      <div class="fw-semibold mb-2"><%= pluralize(outcome.errors.count, "error") %> prevented saving:</div>
      <ul class="mb-0">
        <% outcome.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-12">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="col-12">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 3 %>
    </div>

    <div class="col-md-4">
      <%= f.label :target_date, class: "form-label" %>
      <%= f.date_field :target_date, class: "form-control", required: true %>
    </div>

    <div class="col-md-4">
      <%= f.label :responsible_person, class: "form-label" %>
      <%= f.text_field :responsible_person, class: "form-control", required: true %>
    </div>

    <div class="col-md-4">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status, Outcome.statuses.keys.map { |k| [k.titleize, k] }, {}, class: "form-select", required: true %>
    </div>

    <div class="col-md-4">
      <%= f.label :completion_date, class: "form-label" %>
      <%= f.date_field :completion_date, class: "form-control" %>
      <div class="form-text">Auto-filled when status becomes completed (if blank).</div>
    </div>
  </div>

  <div class="mt-4 d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", mou_path(mou), class: "btn btn-outline-secondary" %>
  </div>
<% end %>
